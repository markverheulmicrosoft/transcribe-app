# Azure AI Speech (recommended for Dutch + diarization)
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=westeurope

# Azure OpenAI Configuration
# Get these values from Azure Portal -> Your Azure OpenAI Resource -> Keys and Endpoint

# Azure OpenAI Endpoint (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure OpenAI API Key (from Keys and Endpoint section)
AZURE_OPENAI_API_KEY=your-api-key-here

# Deployment name for gpt-4o-transcribe-diarize model
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-transcribe-diarize

# Default engine: "speech" or "openai"
TRANSCRIPTION_ENGINE=speech

# Application settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=300
